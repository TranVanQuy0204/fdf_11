<div class="panel panel-primary">
  <div class="panel-heading">
    <i class="fa fa-user pull-right" aria-hidden="true"></i>
    <span class="edu-text_system_7"><%= t ".title_user" %></span>
  </div>
  <div class="panel-body">
    <div class="row">
      <%= form_for "#" do |f| %>
        <div class="col-lg-6">
          <div class="row">
          <div class="col-lg-12">
            <div class="form-group input-group ">
              <%= f.label :email %>
              <%= f.text_field :email, class: "form-control",
                placeholder: t(".email") %>
            </div>
            <div class="form-group input-group ">
              <%= f.label :password %>
              <%= f.text_field :email, class: "form-control",
                placeholder: t(".email") %>
            </div>
          </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
