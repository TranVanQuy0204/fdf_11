<div class="panel panel-primary">
  <div class="panel-heading">
    <i class="fa fa-shopping-cart pull-right" aria-hidden="true"></i>
    <span class="edu-text_system_7"><%= t ".title_order" %></span>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8">
        <%= form_for "" do |f| %>
          <fieldset disabled="">
            <div class="form-group">
              <%= f.label :name %>:
              <span class="s">Tran Van Quy</span>
              <%= f.hidden_field :name, class: "form-control", disabled: :true,
                value: "name" %>
            </div>
            <div class="form-group">
              <%= f.label :phone %>
              <%= f.hidden_field :phone, class: "form-control", disabled: :true,
                value: "name" %>
            </div>
            <div class="form-group">
              <%= f.label :address %>
              <%= f.hidden_field :address, class: "form-control", disabled: :true,
                value: "name" %>
            </div>
          </fieldset>
        <% end %>
      </div>
      <div class="col-lg-2"></div>
    </div>
    <div class="row">
      <div class="col-lg-8"></div>
      <div class="col-lg-4">
        <%= link_to "", class: "btn btn-primary pull-right" do %>
          <%= t ".checkout" %>
          <i class="fa fa-paper-plane" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
