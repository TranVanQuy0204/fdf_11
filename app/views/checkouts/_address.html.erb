<div class="panel panel-primary">
  <div class="panel-heading">
    <i class="fa fa-truck pull-right" aria-hidden="true"></i>
    <span class="edu-text_system_7"><%= t ".title_shipping" %></span>
  </div>
  <div class="panel-body">
    <div class="row">
      <%= form_for "" do |f| %>
        <div class="col-lg-12">
          <div class="col-lg-6">
            <div class="form-group input-group ">
              <%= f.label :Address %>
              <%= f.text_field :address, class: "form-control ",
                placeholder: t(".address") %>
            </div>
            <span class="notification-checkout hidden">
              <%= t ".error_update_address" %>
            </span>
          </div>
          <div class="col-lg-6">
            <br/>
            <div class="form-group input-group pull-right">
              <%= link_to "#", class: "btn btn-default pull-right",
                onclick: "return false", id: "checkout_address" do %>
                <%= t ".checkout" %>
                <i class="fa fa-level-down" aria-hidden="true"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
