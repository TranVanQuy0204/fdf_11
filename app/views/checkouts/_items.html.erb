<div class="panel panel-green">
  <div class="panel-heading">
    <i class="fa fa-list-alt pull-right" aria-hidden="true"></i>
    <span class="edu-text_system_7"><%= t ".order" %></span>
  </div>
  <div class="panel-body">
    <div class="row">
      <table id="dataTables-example" class="table table-striped table-checkout
        table-bordered table-hover dataTable no-footer dtr-inline">
        <tbody>
          <% @order_items.each_with_index do |order_item, index| %>
            <tr>
              <td class="text-center">
                <%= image_tag order_item.image,
                  alt: order_item.name,
                  class: "moto-widget-image-picture checkout-image" %>
              </td>
              <td class="text-center">
                <div class="row product_name">
                  <%= order_item.name %>
                </div>
                <div class="row">
                  <%= form_for [order_item.product, order_item],
                    method: :put do |f| %>
                    <div class="col-sm-6 col-md-6">
                      <%= f.number_field :quantity,
                        value: order_item.quantity,
                        class: "form-control" %>
                    </div>
                    <div class="col-sm-6 col-md-6">
                    <%= f.button :submit, title: t(".update"),
                      class: "btn btn-warning btn-circle btn-lg" do %>
                      <i class="fa fa-refresh" aria-hidden="true"></i>
                    <% end %>
                    </div>
                  <% end %>
                </div>
                <div class="row">
                  <strong><%= t".price" %></strong>
                  <strong>
                    <%= number_to_currency order_item.price %>
                  </strong>
                </div>
              </td>
              <td class="text-center">
                <div class="moto-widget moto-widget-button
                  moto-preset-3 checkout-action-items">
                  <%= link_to product_line_item_path(order_item.product,
                    order_item), method: :delete,
                    class: "btn btn-danger btn-circle btn-lg",
                    title: t(".delete") do %>
                    <i class="fa fa-trash" aria-hidden="true"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="row">
      <table class="table table-hover total-checkout">
        <tbody>
          <tr class="row">
            <td class="col-lg-6">
              <strong><%= t ".total_items" %></strong>
            </td>
            <td class="col-lg-6 text-right">
              <%= current_order.number_items %> <%= t ".product" %>
            </td>
          </tr>
          <tr class="row">
            <td class="col-lg-6">
              <strong><%= t ".subtotal" %></strong>
            </td>
            <td class="col-lg-6 text-right">
              <trong>
                <%= number_to_currency current_order.total_price %>
              </trong>
            </td>
          </tr>
          <tr></tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
