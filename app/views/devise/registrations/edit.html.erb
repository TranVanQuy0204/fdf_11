<div class="clear-fix"></div>
<section id="section-content" class="content page-29 moto-section">
  <div class="moto-widget moto-widget-row row-fixed">
    <div class="container-fluid">
      <div class="row">
        <div class="moto-cell col-sm-12">
          <div class="moto-widget moto-widget-text moto-preset-default
            moto-spacing-top-large moto-spacing-right-auto
            moto-spacing-bottom-auto moto-spacing-left-auto">
            <div class="moto-widget-text-content moto-widget-text-editable">
              <p class="moto-text_system_4 text-center">
                <%= t ".title" %> <%= resource_name.to_s.humanize %>
              </p>
            </div>
          </div>
          <div class="moto-widget moto-widget-store-product-grid
            moto-preset-default moto-spacing-top-small
            moto-spacing-right-auto moto-spacing-bottom-auto
            moto-spacing-left-auto ">
            <div class="row">
              <div class="col-sm-6 col-sm-offset-3">
                <div class="moto-widget moto-widget-contact_form
                  moto-preset-default moto-align-left moto-spacing-top-medium
                  moto-spacing-right-auto moto-spacing-bottom-medium
                  moto-spacing-left-auto">
                  <%= form_for resource, as: resource_name,
                    url: registration_path(resource_name),
                    html: {method: :put} do |f| %>
                    <%= devise_error_messages! %>
                    <div class="moto-widget-contact_form-group">
                      <%= f.email_field :email, autofocus: true,
                        placeholder: t(".email"),
                        class: "moto-widget-contact_form-field
                        moto-widget-contact_form-input" %>
                    </div>
                    <% if devise_mapping.confirmable? &&
                      resource.pending_reconfirmation? %>
                      <div><%= t(".waiting") %>
                        <%= resource.unconfirmed_email %>
                      </div>
                    <% end %>
                    <div class="moto-widget-contact_form-group">
                      <i><% t ".message_password" %></i>
                      <%= f.password_field :password_confirmation,
                        autocomplete: "off",
                        placeholder: t(".password_confirmation"),
                        class: "moto-widget-contact_form-field
                        moto-widget-contact_form-input" %>
                    </div>
                    <div class="moto-widget-contact_form-group">
                      <%= f.password_field :password_confirmation,
                        autocomplete: "off",
                        placeholder: t(".password_confirmation"),
                        class: "moto-widget-contact_form-field
                        moto-widget-contact_form-input" %>
                    </div>
                    <div class="moto-widget-contact_form-group">
                      <%= f.password_field :current_password,
                        autocomplete: "off",
                        placeholder: t(".current_password"),
                        class: "moto-widget-contact_form-field
                        moto-widget-contact_form-input" %>
                    </div>
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="moto-widget-contact_form-buttons">
                          <div class="actions moto-widget moto-widget-button
                            moto-preset-3">
                            <%= f.submit t(".update"), class: "btn btn-primary",
                              title: t(".update")  %>
                          </div>
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="moto-widget-store-form_link-wrap">
                          <p>
                          <%= button_to t(".cancel"),
                            registration_path(resource_name),
                            data: {confirm: t(".confirm")},
                            method: :delete %>
                          </p>
                        </div>
                        <div class="moto-widget-store-form_link-wrap">
                          <%= link_to t(".back"), :back %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
