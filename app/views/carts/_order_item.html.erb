<tr>
  <td><%= order_item_counter + 1  %></td>
  <td>
    <%= image_tag order_item.image,
      alt: order_item.name,
      class: "moto-widget-image-picture card-image" %>
  </td>
  <td class="text-center">
    <%= order_item.name %>
  </td>
  <td class="text-center"><%= order_item.quantity %></td>
  <td class="text-center"><%= order_item.price %></td>
  <td class="text-center">
    <%= order_item.quantity * order_item.price %>
  </td>
  <td class="text-center">
    <div class="moto-widget moto-widget-button
      moto-preset-3">
      <%= link_to root_path,
        class: "moto-widget-button-link
        moto-size-medium" do %>
        <%= t ".delete" %>
      <% end %>
    </div>
  </td>
</tr>
