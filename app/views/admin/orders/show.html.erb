<div class="row material">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-sm-6">
            <span class="page-header text-center"><%= @order.code %></span>
          </div>
          <div class="col-sm-6 text-right dropdown">
            <span class="label label-<%= @order.status %>">
              <%= @order.status %></td>
            </span>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <div id="dataTables-example_wrapper"
            class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="row search-param">
            <div class="col-sm-6">
              <%= search_form_for @search, url: admin_order_path(@order) do |f|%>
                <%= select_tag :limit,
                  options_from_collection_for_select(Settings.show_limit,
                  :second, :second,selected: params[:limit] ||
                  Settings.show_limit.limit), id: "show-limit"%>
                <%= f.text_field :id, placeholder: t(".name") %>
                <%= f.submit t(".search"),
                  class: "btn-floating btn-large waves-effect waves-light" %>
              <% end %>
            </div>
            <div class="col-sm-6 text-right">
              <% if @order.pendding? %>
                <%= link_to admin_order_path(@order),
                  class: "btn btn btn-danger", method: :delete,
                  data: {confirm: t(".confirm")} do %>
                  <i class="fa fa-trash" aria-hidden="true"></i>
                  <%= t ".delete" %>
                <% end %>
                <%= link_to admin_order_path(@order),
                  class: "btn btn btn-success", method: :put,
                  data: {confirm: t(".confirm_finish")} do %>
                  <i class="fa fa-trash" aria-hidden="true"></i>
                  <%= t ".finish" %>
                <% end %>
              <% end %>
            </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <table id="dataTables-example" class="table table-striped
                  table-bordered table-hover dataTable no-footer dtr-inline"
                  role="grid" aria-describedby="dataTables-example_info">
                  <thead>
                    <tr role="row">
                      <th>#</th>
                      <th><%= sort_link @search, :name, t(".name") %></th>
                      <th>
                        <%= sort_link @search, :image, t(".image") %>
                      </th>
                      <th>
                        <%= sort_link @search, :quantity, t(".quantity") %>
                      </th>
                      <th>
                        <%= sort_link @search, :price, t(".price") %>
                      </th>
                      <th>
                        <%= sort_link @search, :created_at, t(".created_at") %>
                      </th>
                      <th>
                          <%= t".total_price" %>
                      </th>
                    </tr>
                    <tbody>
                      <%= render partial: "order_item",
                        collection: @order_items %>
                    </tbody>
                  </thead>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
