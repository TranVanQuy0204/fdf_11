<div class="row material">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-sm-6">
            <span class="page-header text-center"><%= t ".title" %></span>
          </div>
          <div class="col-sm-6 text-right dropdown">
            <%= link_to "", class: "btn btn-primary btn-circle btn-lg
              dropdown-toggle", data: {toggle: :dropdown},
              aria: {expanded: :true} do %>
              <i class="fa fa-list" aria-hidden="true"></i>
            <% end %>
            <ul class="dropdown-menu dropdown-user pull-right">
              <li>
                <%= link_to admin_orders_path(format: :csv) do %>
                  <%= t ".export_csv" %>
                <% end %>
              </li>
              <li>
                <%= link_to admin_orders_path(format: :xls) do %>
                  <%= t ".export_xls"  %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <div id="dataTables-example_wrapper"
            class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="row search-param">
            <div class="col-sm-6">
              <%= search_form_for @search, url: admin_orders_path do |f| %>
                <%= select_tag :limit,
                  options_from_collection_for_select(Settings.show_limit,
                  :second, :second, selected: params[:limit] ||
                  Settings.show_limit.limit), id: "show-limit" %>
                <%= f.select :status_eq,
                  options_for_select(%w(new_order pendding success cancle),
                  selected: params[:q].nil? ? "" : params[:q][:status_eq]),
                  include_blank: true, id: "status" %>
                <%= f.text_field :code_cont, placeholder: t(".code") %>
                <%= f.submit t(".search"),
                  class: "btn-floating btn-large waves-effect waves-light" %>
              <% end %>
            </div>
            <div class="col-sm-6 text-right">
            </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <table id="dataTables-example" class="table table-striped
                  table-bordered table-hover dataTable no-footer dtr-inline"
                  role="grid" aria-describedby="dataTables-example_info">
                  <thead>
                    <tr role="row">
                      <th>#</th>
                      <th><%= sort_link @search, :code, t(".code") %></th>
                      <th><%= sort_link @search, :name, t(".user_name") %></th>
                      <th>
                        <%= sort_link @search, :number_items,
                          t(".number_items") %>
                      </th>
                      <th>
                        <%= sort_link @search, :total_price,
                          t(".total_price") %>
                      </th>
                      <th>
                        <%= sort_link @search, :ship_address,
                          t(".ship_address") %>
                      </th>
                      <th><%= sort_link @search, :status, t(".status") %></th>
                      <th>
                        <%= sort_link @search, :created_at, t(".created_at") %>
                      </th>
                      <th><%= t ".action" %></th>
                    </tr>
                    <tbody>
                      <% if @orders.count > 0 %>
                        <%= render @orders %>
                      <% else %>
                        <%= render "shared/record", value: 9 %>
                      <% end %>
                    </tbody>
                  </thead>
                </table>
                <%= paginate @orders, theme: "twitter-bootstrap-3" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
