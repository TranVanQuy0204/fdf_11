<div class="row material">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-sm-6">
            <span class="page-header text-center"><%= t ".history" %></span>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <div id="dataTables-example_wrapper"
            class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="row search-param">
            </div>
            <div class="row">
              <div class="col-sm-12">
                <table id="dataTables-example" class="table table-striped
                  table-bordered table-hover dataTable no-footer dtr-inline"
                  role="grid" aria-describedby="dataTables-example_info">
                  <thead>
                    <tr role="row">
                      <th>#</th>
                      <th><%= sort_link @search, :name, t(".user_name") %></th>
                      <th><%= sort_link @search, :email, t(".target") %></th>
                      <th><%= sort_link @search, :email, t(".action") %></th>
                      <th>
                        <%= sort_link @search, :created_at, t(".created_at") %>
                      </th>
                    </tr>
                    <tbody>
                      <% if @activities.count > 0 %>
                        <%= render @activities %>
                      <% else %>
                        <%= render "shared/record", value: 5 %>
                      <% end %>
                    </tbody>
                  </thead>
                </table>
                <%= paginate @activities, theme: "twitter-bootstrap-3" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
