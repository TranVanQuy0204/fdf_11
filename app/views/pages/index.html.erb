<div class="moto-widget moto-widget-row">
  <div class="container-fluid">
    <div class="row">
      <div class="moto-cell col-sm-12">
        <div class="moto-widget moto-widget-spacer moto-preset-default
          moto-spacing-top-medium moto-spacing-right-auto
          moto-spacing-bottom-medium moto-spacing-left-auto">
            <div class="moto-widget-spacer-block">
            <div>
              <% if current_user %>
                Signed in as <strong><%= current_user.name %></strong>!
                <%= link_to "Sign out", logout_path, id: "sign_out", method: :delete %>
              <% else %>
                <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
                <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
                <%= link_to 'Sign In with Github', '/auth/github' %>
              <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
